{
  "name": "dapp",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "node src/app.js",
    "start-local": "node -r dotenv/config src/app.js",
    "test": "rm -rf dist && tsc && NODE_OPTIONS=--experimental-vm-modules npx jest --setupFiles dotenv/config --silent=false",
    "ctest": "rm -rf dist && tsc && NODE_OPTIONS=--experimental-vm-modules npx jest --setupFiles dotenv/config --silent=true --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "check-format": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "deploy-dapp": "ts-node --esm ./deployment/deployScript.ts",
    "publish-sell-order": "ts-node --esm ./deployment/publishSellOrderScript.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "iexec": "^8.1.1",
    "joi": "^17.9.2",
    "jszip": "^3.10.1",
    "node-mailjet": "^6.0.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
