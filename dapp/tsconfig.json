  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "deployment/**/*"],
  "exclude": ["node_modules/**/*", "**/*.spec.ts"]
}
